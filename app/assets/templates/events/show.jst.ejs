<div class="row event-form">
  <ul class="col-md-2 dropbox list-group" id="invites">
    <h4>Invited Users</h4>
     <p>Drop here to invite</p>
  </ul>
  <div class="col-md-10">
    <div id="countdown"></div>
      <h1><%= event.escape('title') %></h1>
      <h3>Created By: <a href="#/users/<%= event.get('creator_id')%>"><%= users.get(event.get('creator_id')).get('user_name') %></a></h3>
      <div id="event-info"></div>
        <div class="row">
          <div class="col-md-4">
            <form id="add-location">
              <h4><label for="event_place">Add Location</label></h4>
              <input type='text' list="places" name="place_name" placeholder="Enter a place" id="event_place">
              <input type='hidden' name="event_place[event_id]" value="<%= event.get('id')%>">
              <datalist id="places"></datalist>
              <input type="submit" id="add-location-submit" class="btn btn-primary" value="Add Location">
            </form>
            <h4>Suggested Locations</h4>
            <ul id="place-list" class='list-group'></ul>
          </div>
          <div class="col-md-8">
            <form id="add-when">
              <h4>Suggest Event Date/Time</h4>
              <input type='hidden' name="event_place[event_id]" value="<%= event.get('id')%>">
              <div class="row">
                <div class="col-md-6">
                  <label for="start_date">Select Start Date</label>
                  <div class="bfh-datepicker" id="datepick1" data-name="start_date"></div>
                </div>
                <div class="col-md-6">
                  <label for="end_date">Select End Date</label>
                  <div class="bfh-datepicker" id="datepick2" data-name="end_date"></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <label for="start_time">Select Start Time</label>
                  <div class="bfh-timepicker" id="timepick1" data-name="start_time"></div>
                </div>
                <div class="col-md-6">
                  <label for="end_time">Select End Time</label>
                  <div class="bfh-timepicker" id="timepick2" data-name="end_time"></div>
                </div>
              </div>
              <br/>
              <input type="submit" id="add-when-submit" class="btn btn-primary" value="Add Date/Time Suggestion">
            </form>
            <h4>Suggested Times</h4>
            <ul id="when-list" class="list-group"></ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $('#datepick1').bfhdatepicker({default:'now', name: 'start_date'});
  $('#timepick1').bfhtimepicker({default:'now', mode: '12h', name: 'start_time'});
  $('#datepick2').bfhdatepicker({default:'now', name: 'end_date]'});
  $('#timepick2').bfhtimepicker({default:'now', mode: '12h', name: 'end_time'});
</script>